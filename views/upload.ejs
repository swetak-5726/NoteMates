<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload Notes â€“ NoteMates</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/upload.css">
    
</head>

<body>

<%- include("partials/navbar") %>
<%- include("partials/messages") %>

<div class="upload-container">
    <h2>Upload Notes</h2>

    <form class="needs-validation" novalidate 
          action="/upload" method="POST" enctype="multipart/form-data">

        <label class="mt-2">Title:</label>
        <input type="text" class="form-control" name="title" required>
        <div class="invalid-feedback">Title is required.</div>

        <label class="mt-3">Subject:</label>
        <input type="text" class="form-control" name="subject" required>
        <div class="invalid-feedback">Subject is required.</div>

        <label class="mt-3">Description:</label>
        <textarea class="form-control" name="description" rows="4"></textarea>

        <label class="mt-3">Select PDF:</label>
        <input type="file" class="form-control" name="pdf" accept="application/pdf" required>
        <div class="invalid-feedback">Please upload a PDF file.</div>

        <div class="d-flex justify-content-between mt-4">
            <a href="/myuploads" class="btn btn-outline-light"><i class="fa-solid fa-arrow-left-long me-1"></i>Back</a>
            <button type="submit" class="btn-upload">Upload</button>
            
        </div>

    </form>
</div>

<script>
(() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    });
})();
</script>

</body>
</html>
