<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NoteMates</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>My Notes</h1>
      <a href="/user" class="btn btn-outline-secondary">Back</a>
    </div>

    <a href="/mynotes/createpage" class="btn btn-primary mb-3">Create Note</a>


    <div class="row">
      <% if (!notes || notes.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info">No notes yet. Create one above.</div>
        </div>
      <% } %>

      <% notes.forEach(note => { %>
        <div class="col-md-6 mb-3">
          <div class="card h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= note.title %></h5>
              <p class="card-text text-truncate"><%= note.content %></p>

              <div class="mt-auto d-flex justify-content-between align-items-center">
                <small class="text-muted"> <%= new Date(note.createdAt).toLocaleString() %> </small>
                <div>
                  <a href="/mynotes/view/<%= note._id %>" class="btn btn-sm btn-outline-primary">View</a>
                  <a href="/mynotes/edit/<%= note._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <form class="d-inline-block" action="/mynotes/delete/<%= note._id %>" method="POST" onsubmit="return confirm('Delete this note?');">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


