<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Note â€“ NoteMates</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
    background: radial-gradient(1200px 400px at 10% 10%, rgba(63,169,245,0.06), transparent 10%),
        radial-gradient(1000px 300px at 90% 90%, rgba(58,211,150,0.03), transparent 10%),
        #0b0b0b;
        color: #e7eef7;
    font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

        .edit-container {
            max-width: 650px;
            margin: 80px auto;
            background: rgba(255, 255, 255, 0.06);
            padding: 30px 35px;
            border-radius: 14px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.45);
            backdrop-filter: blur(6px);
        }

        .edit-container h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
            color: #f3f4f6;
        }

        label {
            font-weight: 500;
            color: #d1d5db;
        }

        .form-control, textarea {
            background:rgba(255, 255, 255, 0.08);
            border: 1px solid #374151;
            color: #f3f4f6;
        }

        .form-control:focus, textarea:focus {
            background: #111827;
            border-color: #60a5fa;
            color: white;
            box-shadow: none;
        }

        .btn-save {
            background: #098ba8;
            color: white;
            padding: 8px 20px;
            border-radius: 8px;
            border: none;
            transition: 0.2s;
        }
        .btn-save:hover {
            background: #1e40af;
        }

        .btn-cancel {
            text-decoration: none;
            background: transparent;
            border: 1px solid #6b7280;
            color: #f8fafd;
            padding: 8px 20px;
            border-radius: 8px;
            transition: 0.2s;
        }
        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: #9ca3af;
        }
    </style>
</head>

<body>

<%- include("partials/navbar") %>
<%- include("partials/messages") %>

<div class="edit-container">
    <h2>Edit Note</h2>

    <form class="needs-validation" novalidate 
          action="/edit/<%= note._id %>?_method=PUT" method="POST">

        <label class="mt-2">Title:</label>
        <input type="text" class="form-control" name="title"
               value="<%= note.title %>" required>
        <div class="invalid-feedback">Title is required.</div>

        <label class="mt-3">Subject:</label>
        <input type="text" class="form-control" name="subject"
               value="<%= note.subject %>" required>
        <div class="invalid-feedback">Subject is required.</div>

        <label class="mt-3">Description:</label>
        <textarea name="description" class="form-control" rows="5"><%= note.description %></textarea>

        <div class="d-flex justify-content-between mt-4">
            <a href="/myuploads" class="btn btn-outline-light">Cancel</a>
            <button type="submit" class="btn-save">Save Changes</button>
        </div>

    </form>
</div>

<script>
(() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    });
})();
</script>

</body>
</html>



